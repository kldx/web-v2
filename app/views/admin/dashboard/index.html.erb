<h1>Statistic</h1>
<div class="row">
  <div class="col-md-12">
    <h4>Total article posted by each admin</h4>
    <%= bar_chart Article.unscope(:order).joins(:user).where('users.role = ?', 1).group('users.callsign').count %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <h4>Article by each category</h4>
    <%= pie_chart Article.unscope(:order).joins(:category).group('categories.name').count %>
  </div>
  <div class="col-md-6">
    <h4>Visitor by each country</h4>
    <%= geo_chart Visit.group(:country).count %>
  </div>
</div>
