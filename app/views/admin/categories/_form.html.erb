<%= form_for @category, url: admin_categories_path, remote: true, html: { class: "form-inline" } do |f| %>
  <% if @category.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" name="button" data-dismiss="dismiss" alert-hidden="true">&times;</button>
    <strong>
      <%= pluralize(@category.errors.count, "error") %> prohibited this page from being saved:
    </strong>
    <ul>
      <% @category.erros.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <%= f.submit "Save", name: "submit", class: "btn btn-primary"%>
  <%= link_to "Cancel", "", id: "cancel", class: "btn btn-link" %>
<% end %>
