<% index = category_counter + 0 %>
<tr id="all_category">
  <td><%= index+1 %></td>
  <td class="col-md-8"><%= category.name %></td>
  <td>
    <%= link_to admin_category_path(category), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" do %>
      <i class="fa fa-trash"></i>
    <% end %>
  </td>
</tr>
