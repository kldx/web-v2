<% if @banner.errors.any? %>
<div class="alert alert-danger alert-dismissable">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <strong><%= pluralize(@banner.errors.count, "error") %> prohibited this user from being saved:</strong>
  <ul>
    <% @banner.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control", required: true %>
</div>

<div class="form-group">
  <%= f.label :default_picture %>
  <% if @banner.try(:default_picture?) %>
  <p>
    <%= image_tag(@banner.default_picture_url(:headline), class: "img-responsive") %>
  </p>
  <% end %>
  <%= f.file_field :default_picture, :class => "form-control-file" %>
  <%= f.hidden_field :default_picture_cache %>
  <small id="emailHelp" class="form-text text-muted">For best result, please upload only 200px * 200px</small>
</div>

<div class="actions">
  <%= f.submit "Submit", class: "btn btn-primary" %>
  <%= link_to "Cancel", admin_banners_path, class: "btn btn-default" %>
</div>
